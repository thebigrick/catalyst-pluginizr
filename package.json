{
  "name": "@thebigrick/catalyst-pluginizr",
  "version": "0.2.0",
  "type": "module",
  "description": "Catalyst Pluginizer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./with-catalyst-pluginizr": {
      "import": "./dist/with-catalyst-pluginizr.js",
      "types": "./dist/with-catalyst-pluginizr.d.ts"
    },
    "./pluginizr/with-tailwind-pluginizr": {
      "import": "./dist/with-tailwind-pluginizr.js",
      "types": "./dist/with-tailwind-pluginizr.d.ts"
    },
    "./generated/*": {
      "import": "./dist/generated/*.js",
      "types": "./dist/generated/*.d.ts"
    }
  },
  "scripts": {
    "build": "npx tsx src/scripts/build.ts && tsup && tsup --config tsup.generated.ts",
    "dev": "concurrently --kill-others \"npx tsx src/scripts/run-dev.ts\" \"tsup --watch\"",
    "setup": "npx tsx src/scripts/setup.ts",
    "clean": "npx tsx src/scripts/clean.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "author": "Riccardo Tempesta <riccardo.tempesta@bigcommerce.com>",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "next": "^15.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.1",
    "glob": "^11.0.0",
    "@types/glob": "^8.1.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "chokidar": "^4.0.1",
    "@types/node": "^20.17.6",
    "@types/react": "^18.3.12",
    "typescript": "^5.6.3",
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.3",
    "@babel/types": "^7.26.3",
    "@babel/generator": "^7.26.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "tailwindcss": "^3.4.16",
    "webpack": "^5.97.1"
  }
}
